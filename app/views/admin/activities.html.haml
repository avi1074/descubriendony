.activities
  .admin
    .container
      %h1 Administrator
      = select_tag "city", options_for_select([ ["Miami", "miami"], ["New York City","newyorkcity"], ["Los Angeles","losangeles"]], @city)
      %ul.nav.nav-tabs
        %li{:role => "presentation"}
          %a{:href => "/admin/categories"} Categories
        %li.active{:role => "presentation"}
          %a{:href => "#"} Activities
        %li{:role => "presentation"}
          %a{:href => "/admin/pages"} Pages
        %li{:role => "presentation"}
          %a{:href => "/admin/transportations"} Transportations
      %br
      %a.btn.btn-primary{href:"javascript:", "data-toggle"=>"modal", "data-target"=>".bs-example-modal-lg"} New   Activity
      .activities-list-container
      %ul
        - @activities.each do |activity|
          %li{data: { "activity-id" => activity.id}}
            = activity.main_title
            %a{href: "/admin/activities/#{activity.id}/edit"} Edit
            %a.delete-activity{data: { "activity-id" => activity.id}, href: "javascript:"} Delete
.modal.fade.bs-example-modal-lg{"aria-hidden" => "true", "aria-labelledby" => "myLargeModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
          %span.sr-only Close
        %h4.modal-title Create new activity
      .modal-body
        Main title:
        %input#new-activity-main-title.form-control{placeholder: "Main title", type: "text"}
      .modal-footer
        %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Cancel
        %button#create-new-activity-button.btn.btn-primary{:type => "button"} Create
